include ../../components/UI/color_square
include ../../components/UI/font_details

doctype html
html
    head
        meta(charset="UTF-8")
        title UI

    body
        .container
            .color_panel
                +color_square('dark_shade', 1, 'Dark Shade 100%', '#1F2041')
                +color_square('dark_shade', 0.75, 'Dark Shade 75%', '#1F2041')
                +color_square('dark_shade', 0.5, 'Dark Shade 50%', '#1F2041')
                +color_square('dark_shade', 0.25, 'Dark Shade 25%', '#1F2041')
                +color_square('dark_shade', 0.05, 'Dark Shade 5%', '#1F2041')
                +color_square('purple', 1, 'Purple', '#BC9CFF')
                +color_square('green', 1, 'Green', '#6FCF97')
            .fonts_dsc
                +font_details('h1', 'H1', 'This one is the sub-section or widget title')
                +font_details('h2', 'H2', 'Next one is the item title inside widgets')
                +font_details('h3 uppercase', 'H3', 'This is a label or CTA text')
                +font_details('body', 'Body', 'This is the body text which is used for most of the design, like paragraphs, lists, etc.')
